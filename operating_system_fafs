// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;

int main() {
    //data
   int at[3]= {1,2,3};
   int bt[3]= {2,6,3};
   int tat[3]={};
   int wt[3] ={};
   // ct use
   int count =1;
   int ct[3]= {};
   double awt=0;
   double atat=0;
   
   //size of array bt
   int size = sizeof(bt)/sizeof(bt[0]);
   
   
   //loop for ct
   for(int i = 0; i<size; i++){
       count = count +bt[i];
       ct[i]= count;
       cout<<"ct : "<<ct[i]<<endl;
      
   }
   // work with tat = ct-at
   for(int i = 0; i<size; i++){
       tat[i] = ct[i]-at[i];
       cout<<"tat :"<<tat[i]<<endl;
      
   }
    for(int i = 0; i<size; i++){
       wt[i] = tat[i]-bt[i];
       cout<<"wt :"<<wt[i]<<endl;
      
   }
 //  average wating time 
  for(int i : wt){
      awt+=i;
  }
  //average tarn around time
  for(int i : tat){
      atat+=i;
  }
  
   cout<<"awt : "<<awt/size<<endl;
   cout<<"atat : "<<atat/size<<endl;
    return 0;
}
